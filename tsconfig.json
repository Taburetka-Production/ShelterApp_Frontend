{
    "compilerOptions": {
      "moduleResolution": "node",
      "baseUrl": ".",  // Optional: base directory for resolving non-relative modules
      "paths": {
        "*": ["node_modules/*", "src/*"]
      },
      "esModuleInterop": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "jsx": "react-jsx"  // Important for React 17+ JSX transform
    }
  }